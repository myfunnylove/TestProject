<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/topContainer"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        >

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/wallpaper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@mipmap/bg5"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/background_username"

            >

            <org.main.socforfemale.resources.customviews.CircleImageView
                android:id="@+id/avatar"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:background="@drawable/res_circle_gray_when_select"
                />

            <TextView
                android:id="@+id/firstName"
                style="@style/HeaderText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:padding="4dp"
                />

            <TextView
                android:id="@+id/username"
                style="@style/NormalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="16sp"

                />

            <Button
                android:id="@+id/follow"
                style="@style/ButtonUnpressed"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:text="Settings" />

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/postsLay"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/topContainer"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:orientation="horizontal">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@color/clouds"


            >

            <TextView
                style="@style/NormalText"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="6dp"
                android:text="POSTS"
                />

            <TextView
                android:id="@+id/posts"
                style="@style/HeaderText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"


                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/followersLay"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/res_block_gray_when_select"
            android:orientation="vertical"


            >

            <TextView
                style="@style/NormalText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="6dp"
                android:text="FOLLOWERS" />

            <TextView
                android:id="@+id/followers"
                style="@style/HeaderText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                 />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/followingLay"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/res_block_gray_when_select"
            android:orientation="vertical"


            >

            <TextView
                style="@style/NormalText"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="6dp"
                android:text="FOLLOWING"

                />

            <TextView
                android:id="@+id/following"
                style="@style/HeaderText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"


                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>