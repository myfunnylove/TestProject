<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >



    <include layout="@layout/res_error_connection_lay"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
       android:layout_below="@+id/logo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:orientation="vertical"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                style="@style/LogoText"
                android:text="App Name"
                android:gravity="center"
                />


            <TextView
                android:id="@+id/errorText"
                style="@style/ErrorText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                />



                <android.support.design.widget.TextInputEditText
                    android:id="@+id/login"
                    style="@style/NormalText"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="text"
                    android:paddingLeft="6dp"
                    android:layout_marginBottom="8dp"
                    android:hint="@string/username"
                    android:textColorHint="@color/material_grey_400"
                    android:textColor="@color/normalTextColor"
                    android:background="@drawable/edittext_bg"
                    />





                <android.support.design.widget.TextInputEditText
                    android:id="@+id/pass"
                    style="@style/NormalText"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="textPassword"
                    android:paddingLeft="6dp"

                    android:layout_marginBottom="8dp"
                    android:hint="@string/password"
                    android:textColorHint="@color/material_grey_400"
                    android:textColor="@color/normalTextColor"

                    android:background="@drawable/edittext_bg"
                    android:layout_marginTop="8dp"
                    />

            <TextView
                style="@style/NormalText"
                android:textSize="14sp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:gravity="right"
                android:text="FORGOT PASSSWORD?" />
            <Button

                android:id="@+id/logIn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/Sign_in"
                android:background="@drawable/button_bg"
                android:textColor="@color/white"
                />

            <TextView
                style="@style/NormalText"
                android:textColor="@color/asbestos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="OR" />
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_gravity="center"
               android:gravity="center"
               >
               <android.support.v7.widget.AppCompatImageView
                   android:id="@+id/loginVk"
                   android:layout_width="50dp"

                   android:layout_height="50dp"
                   android:padding="8dp"
                   app:srcCompat="@drawable/vk"
                   android:background="@drawable/border_style"
                   android:layout_marginRight="8dp"
                   />
               <android.support.v7.widget.AppCompatImageView
                   android:id="@+id/loginFb"
                   android:layout_width="50dp"

                   android:layout_height="50dp"
                   android:padding="8dp"
                   app:srcCompat="@drawable/facebook"
                   android:background="@drawable/border_style"
                   android:layout_marginLeft="8dp"

                   />
           </LinearLayout>






            <TextView
                style="@style/NormalText"
                android:textColor="@color/asbestos"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="OR"
                />

            <TextView
                android:id="@+id/signUp"
                style="@style/NormalText"
                android:textColor="@color/material_grey_500"

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:text="SIGN UP FOR ACCOUNT"
                android:background="@drawable/gray_when_select"
                android:textStyle="bold" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <LinearLayout
        android:id="@+id/progressLay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80dddddd"
        android:gravity="center"

        android:visibility="gone"
        >

        <ProgressBar
            android:theme="@style/CircularProgress"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="45dp"
            android:layout_height="45dp" />
    </LinearLayout>
    <include layout="@layout/res_error_connection_lay"/>

</RelativeLayout>

