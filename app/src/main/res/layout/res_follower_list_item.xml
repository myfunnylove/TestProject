<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:background="@drawable/res_block_gray_when_select"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <org.main.socforfemale.resources.customviews.CircleImageView
            android:id="@+id/img"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_gravity="center_horizontal"
            app:civ_border_color="@color/silver"
            app:civ_border_width="0.50dp"
            app:civ_fill_color="@color/white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"

            >

            <TextView
                android:id="@+id/name"
                style="@style/HeaderText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:maxLines="1"
                android:layout_weight="1"
                android:gravity="center|left"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/login"
                style="@style/NormalText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:maxLines="1"
                android:layout_weight="1"
                android:gravity="center|left"
                android:textSize="13sp" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/follow"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:background="@drawable/button_accent_select"
        android:gravity="center"
        android:text="@string/unfollow"
        android:textColor="@color/white"
        android:textSize="14sp" />
</RelativeLayout>